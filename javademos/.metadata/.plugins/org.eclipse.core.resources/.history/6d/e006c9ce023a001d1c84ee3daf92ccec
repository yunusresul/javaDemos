package miniProjeAsalSayi;

public class Main {

	public static void main(String[] args) {
		int number = 45;
		int reminder = number % 2;
		System.out.println(reminder);
		
		if (reminder==1) {
			System.out.println(number+" asal sayıdır");
		}
		else if(reminder==0) {
			System.out.println(number+" asal sayı değildir");
		}

	}

}
